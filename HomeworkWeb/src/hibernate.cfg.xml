<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<!-- Generated by MyEclipse Hibernate Tools.                   -->
<hibernate-configuration>

	<session-factory>
		<property name="dialect">
			org.hibernate.dialect.MySQLDialect
		</property>
		<property name="connection.url">
			jdbc:mysql://127.0.0.1:3306/homework_web
		</property>
		<property name="connection.username">root</property>
		<property name="connection.password">31415926</property>
		<property name="connection.driver_class">
			com.mysql.jdbc.Driver
		</property>
		<property name="myeclipse.connection.profile">
			HomeworkWebDriver
		</property>
		<property name="hbm2ddl.auto">update</property>
		<!-- 设置二级缓存插件EHCache的Provider类-->
		<!--  
			< property name="hibernate.cache.provider_class">  
			org.hibernate.cache.EhCacheProvider   
			</property>  
		-->
		<!-- 启动"查询缓存"  这里禁用二级缓存 -->
		<!-- 
			<property name="hibernate.cache.use_query_cache">  
			false   
			</property>
		-->
		<property name="hibernate.connection.autocommit">true</property>

		<!-- 连接池配置 -->
		<property name="com.mchange.v2.c3p0.ComboPooledDataSource">
			org.hibernate.connection.C3P0ConnectionProvider
		</property>

		<property name="hibernate.c3p0.max_size">20</property>
		<property name="hibernate.c3p0.min_size">5</property>
		<property name="hibernate.c3p0.timeout">50000</property>
		<property name="hibernate.c3p0.max_statements">100</property>
		<property name="hibernate.c3p0.idle_test_period">3000</property>
		<!-- 当连接池耗尽并接到获得连接的请求，则新增加连接的数量 -->
		<property name="hibernate.c3p0.acquire_increment">2</property>
		<!-- 是否验证，检查连接 -->
		<property name="hibernate.c3p0.validate">false</property>

		<mapping resource="me/hupeng/homeworkweb/bean/User.hbm.xml" />
		<mapping resource="me/hupeng/homeworkweb/bean/Classes.hbm.xml" />
		<mapping
			resource="me/hupeng/homeworkweb/bean/Choiceclass.hbm.xml" />
		<mapping resource="me/hupeng/homeworkweb/bean/Task.hbm.xml" />
		<mapping resource="me/hupeng/homeworkweb/bean/Bug.hbm.xml" />
		<mapping resource="me/hupeng/homeworkweb/bean/Homework.hbm.xml" />
		<mapping
			resource="me/hupeng/homeworkweb/bean/Courseware.hbm.xml" />
		<mapping
			resource="me/hupeng/homeworkweb/bean/Classname.hbm.xml" />
		<mapping resource="me/hupeng/homeworkweb/bean/Student.hbm.xml" />


	</session-factory>

</hibernate-configuration>